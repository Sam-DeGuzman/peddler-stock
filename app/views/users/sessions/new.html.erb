   <div class="h-10 input-component mb-10 mt-4">
  <%= f.label :email,class: "transition-all bg-white px-1" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"h-full w-full border-gray-300 px-2 transition-all border-blue rounded-sm" %>
    
  </div>
  
    <div class="h-10 input-component mb-7 mt-4">
    <%= f.label :password, class: "transition-all bg-white px-1" %>
    <%= f.password_field :password, autocomplete: "current-password",class:"h-full w-full border-gray-300 px-2 transition-all border-blue rounded-sm" %>
    
  </div>
  
  <% if devise_mapping.rememberable? %>
    <div class="field mb-3">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="text-center">
    <%= f.submit "Log in",id:"login_btn", class:"p-2 rounded-lg cursor-pointer text-gray-50 bg-green-500"%>
  </div>
<% end %>

<section class="text-center mt-2">
<%= link_to "Login as an Admin", new_admin_session_path,class:"text-blue-500" %>
<hr class="my-2 bg-gray-900">
<%= render "users/shared/links" %>

</section>

  </div>
</div>

<style>
input:not(:focus) + label {
  color: rgba(70, 70, 70, 1);
}
input {
  border-width: 1px;
}
input:focus {
  outline: none;
  border-color: rgba(37, 99, 235, 1);
}
</style>
<script>
    document.getElementById('email').focus()
    const allInputs = document.querySelectorAll('input');
    for(const input of allInputs) {
        input.addEventListener('input', () => {
            const val = input.value
            if(!val) {
                input.parentElement.classList.add('empty')
            } else {
                input.parentElement.classList.remove('empty')
            }
        })
    }
</script>