<!DOCTYPE html>
<html>
  <head>
    <title>Peddler - Stock Trading App</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application',media: 'all','data-turbolinks-track': 'reload' %>
    <%= favicon_link_tag asset_path('peddler_icon.png') %>
    <script src="https://kit.fontawesome.com/e27963bb72.js" crossorigin="anonymous"></script>
  </head>

  <body class="p-0 m-0 ">
    <% unless signed_in? %>
      <%= render 'partials/navbar' %>
    <% end %>

    <% if signed_in? %>
      <% if current_user %>
          <%= render 'partials/navbar' %>
      <% else %>
          <%= render 'partials/adminnav' %>
    <% end %>
      
    <% end %>
    <% if notice %>
    <%= render 'partials/notice' %>
    
    <% elsif alert  %>
    <%= render 'partials/alert' %>
     
    <% end  %>   
        <br />
    <%= yield %>

    <%= render 'partials/footer' %>
  </body>
</html>

